<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/bottomMenuLL"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/body_black"

        android:layout_alignParentBottom="true"
        >



        <TextView
            android:id="@+id/book_process_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/book_setting_btn"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/txfj_jindu"
            android:gravity="center"
            android:text="@string/txfj_reader_process"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/book_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/txfj_shezhi"


            android:gravity="center"
            android:text="@string/txfj_reader_setting"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>